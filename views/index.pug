extends layout

append stylesheets
  link(rel='stylesheet', href='/stylesheets/index.css')


block content
  //append -> layouttaki verilerin üzerine yazar yani hem layouttakiler hem de bu sayfadakiler çalışır.
  //block -> override eder. Yani eğer layoutta content içinde birşey varsa burda block ile onu ezeriz ve başka bir
  //şey yazarız.
  meta(name="google-signin-client_id" content="971996073795-vhhp80oev6upjuskjuk2cejuueeke5mh.apps.googleusercontent.com")
  div(ng-controller="indexController")
    .modal
      .modal__inner
        .modal__header
          h2 Welcome, please login.
        .modal__footer
          a(href='/auth/google')
            i.fa.fa-google-plus(aria-hidden='true')
            | Login with Google+

append javascripts
    script(src="/javascripts/controller/indexController.js")
    script(src="https://apis.google.com/js/platform.js" async defer)
